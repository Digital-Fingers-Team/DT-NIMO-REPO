rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /documents/{allPaths=**} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.metadata.uploadedBy || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'teacher', 'principal']);
    }
    
    match /profile-images/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == resource.metadata.uploadedBy;
    }
    
    match /message-files/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
